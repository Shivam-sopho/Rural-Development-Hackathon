<!DOCTYPE html>
<html>
  <head>
    <title>Geocoding service</title>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <style>
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
      #map {
        height: 100%;
      }
      /* Optional: Makes the sample page fill the window. */
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #floating-panel {
        position: absolute;
        top: 10px;
        left: 25%;
        z-index: 5;
        background-color: #fff;
        padding: 5px;
        border: 1px solid #999;
        text-align: center;
        font-family: 'Roboto','sans-serif';
        line-height: 30px;
        padding-left: 10px;
      }
    </style>
  </head>
  <body>
    <div id="floating-panel">
      <% var address= [] %>
        <% for(var i=0;i<locat.length;i++){%>
          <% address.push(locat[i].address); %>
        <% } %>
        <% address = Array.from(new Set(address)) %> 
    </div>
    <div id="map"></div>
    <script>
      function initMap() {
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 8,
          center: {lat: 23.3441, lng: 85.3096}
        });
        var geocoder = new google.maps.Geocoder();
        var n = <%= locat.length %>
        var a = <%-JSON.stringify(address) %>
        for(var i=0;i<n;i++){
          console.log(a[i]);
          geocodeAddress(geocoder, map, a[i]);
        }
        
        
        //geocodeAddress(geocoder, map,"muzaffarpur");
        /*document.getElementById('submit').addEventListener('click', function() {
          
        });*/
      }

      function geocodeAddress(geocoder, resultsMap,address) {
        //var address = document.getElementById('address').value;
        geocoder.geocode({'address': address}, function(results, status) {
          if (status === 'OK') {
            resultsMap.setCenter(results[0].geometry.location);
            var marker = new google.maps.Marker({
              map: resultsMap,
              position: results[0].geometry.location
            });
          } else {
            alert('Geocode was not successful for the following reason: ' + status);
          }
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBoJX--bwzJcnHObJPrCoiwDBf25bEnqfU&callback=initMap">
    </script>
  </body>
</html>